<%= form_with model: @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :ingredients %>
  <%= f.text_area :ingredients %>
  <%= f.label :directions %>
  <%= f.text_field :directions %>
  <%= f.label :variation_status %>
  <%= f.check_box :variation_status %>
  <%= f.submit %>
<% end %>
