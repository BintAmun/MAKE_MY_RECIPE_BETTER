<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1514986888952-8cd320577b68?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1176&q=80);">
  <div class="container">
    <h1>Make My Recipe Better! <strong>Sharing flavor with the world!!</strong>!</h1>
    <p>United we cook!</p>
    <%= form_with url: recipes_path, method: :get, class: "d-flex col-6" do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a recipe"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>

<div class="container d-flex">
  <div class="row row-cols-4">
    <% @recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe), class: "card-recipe" do %>
        <div class="card m-2 col">
          <%= cl_image_tag recipe.photo.key, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-text"><strong><%= recipe.name %></strong></h5></div>
            <div class="average-score mb-3">
              <div class="star-rating ml-1">
                <div class="star-rating-front" style="width: <%= recipe.avg_score_percentage %>%">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
            <div class="average-score-display">
              （<%= recipe.avg_score %> points）
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
